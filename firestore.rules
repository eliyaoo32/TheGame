rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: These rules are insecure and are meant for development purposes only.
    // They allow anyone to read and write to your entire database.
    // Before deploying to production, you must secure your rules.
    //
    // For this app, a secure rule would look like this (once auth is added):
    // match /users/{userId}/habits/{habitId} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
